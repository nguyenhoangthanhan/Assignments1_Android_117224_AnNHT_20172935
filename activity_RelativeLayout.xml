<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Main3Activity">



    <TextView
        android:background="@color/dark1"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:text="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView2"
        android:layout_marginTop="3dp">


        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/dark1"
            android:text="CE"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button21"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/dark2"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button22"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/dark2"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button23"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/dark2"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button24"
            android:background="@color/dark1"
            android:layout_marginRight="5dp"
            android:text="+/-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button21"
            android:background="@color/dark1"
            android:text="C"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button26"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button22"
            android:background="@color/dark2"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button27"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button22"
            android:background="@color/dark2"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button28"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button22"
            android:background="@color/dark2"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button29"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@id/button22"
            android:background="@color/dark2"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button26"
            android:background="@color/dark1"
            android:text="BS"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button31"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button26"
            android:background="@color/dark2"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button32"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button26"
            android:background="@color/dark2"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button33"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button26"
            android:background="@color/dark2"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button34"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@id/button26"
            android:background="@color/dark1"
            android:text="."
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button31"
            android:background="@color/dark1"
            android:text="/"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button36"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button31"
            android:background="@color/dark1"
            android:text="x"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button37"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/button31"
            android:background="@color/dark1"
            android:text="-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button38"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/button34"
            android:background="@color/dark1"
            android:text="+"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button39"
            android:layout_toEndOf="@id/button31"
            android:background="@color/dark1"
            android:text="="
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>